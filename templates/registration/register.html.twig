{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, { label: 'Nom d\'utilisateur' }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.firstname, { label: 'Pr√©nom' }) }}
        {{ form_row(registrationForm.lastname, { label: 'Nom' }) }}
        {{ form_row(registrationForm.email, { label: 'Adresse Email' }) }}
        {{ form_row(registrationForm.agreeTerms, { label: 'J\'accepte les conditions d\'utilisation' }) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
